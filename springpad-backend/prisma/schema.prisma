generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

enum KycStatus {
  not_started
  pending
  verified
  rejected
}

enum HoldingType {
  mutual_fund
  stock
  gold_bond
}

enum TransactionType {
  buy
  sell
  dividend
  interest
  redemption
}

enum MarketDataType {
  mutual_fund_nav
  stock_price
  gold_price
}

enum ActivityType {
  login
  portfolio_update
  import
  trade
  manual_edit
  link_broker
}

